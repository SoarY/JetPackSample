<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<ImageView
		android:id="@+id/iv_bg"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintRight_toLeftOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintHeight_default="percent"
		app:layout_constraintHeight_percent="0.45"
		android:src="@mipmap/bg_welcome"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginStart="8dp"
		app:layout_constraintStart_toStartOf="parent"/>

	<TextView
		android:id="@+id/txt_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/iv_bg"
		android:inputType="textMultiLine"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="52dp"
		app:layout_constraintVertical_chainStyle="packed"
		app:layout_constraintBottom_toTopOf="@+id/btn_login"
		android:textColor="@color/textPrimary"
		android:gravity="center"
		android:text="Hoo is a App about sneakers.\n If you want to learn more about sneakers \n Let's Begin"
		android:textSize="@dimen/txt_larger_size"/>

	<Button
		android:id="@+id/btn_login"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@+id/txt_content"
		app:layout_constraintWidth_default="percent"
		app:layout_constraintWidth_percent="0.8"
		app:layout_constraintBottom_toTopOf="@+id/btn_register"
		app:layout_constraintHeight_default="percent"
		app:layout_constraintHeight_percent="0.1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:text="Have a account ? Login"

		android:textSize="@dimen/txt_big_size"
		android:background="@drawable/shape_main_recycle_item_primary"/>

	<Button
		android:id="@+id/btn_register"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@+id/btn_login"
		app:layout_constraintWidth_default="percent"
		app:layout_constraintWidth_percent="0.8"
		app:layout_constraintHeight_default="percent"
		app:layout_constraintHeight_percent="0.1"
		android:text="Join us"
		android:textSize="@dimen/txt_big_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:background="@drawable/shape_main_recycle_item_primary"/>




</androidx.constraintlayout.widget.ConstraintLayout>